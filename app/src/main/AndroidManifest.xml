<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.test.admin.servicedesk">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.test.admin.servicedesk.DirectoryServiceDesk"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.test.admin.servicedesk.Activity.SplashScreenActivity"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.test.admin.servicedesk.Activity.AuthActivity"
            android:theme="@style/AppThemeNoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.AuthActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.test.admin.servicedesk.Activity.ForgetPasswordActivity"
            android:label="Забыл пароль">
            <intent-filter>
                <action android:name="android.intent.action.ForgetPassword"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.test.admin.servicedesk.Activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MainActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.test.admin.servicedesk.Activity.DetailRequestActivity"
            android:theme="@style/AppThemeNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.DetailRequestActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.test.admin.servicedesk.Activity.DescriptionDoneJobActivity">
            <intent-filter>
                <action android:name="android.intent.action.DescriptionDoneJobActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.test.admin.servicedesk.Activity.DetailzationDoneJobActivity">
            <intent-filter>
                <action android:name="android.intent.action.DetailzationDoneJobActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

    </application>

</manifest>