<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/kfuDefaultColor"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/serviceDeskKFU"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:text="ServiceDesk KFU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/kfuFlag"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/serviceDeskKFU"
        android:src="@drawable/kfu_flag"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/loginHint"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_below="@id/kfuFlag"
        android:textColor="@android:color/white"
        android:text="@string/loginHintText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:textColor="@android:color/white"
        android:padding="15dp"
        android:textColorHint="@android:color/white"
        android:background="@drawable/login_edittext"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/loginHint"
        android:hint="Логин"
        android:id="@+id/login"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />

    <EditText
        android:textColor="@android:color/white"
        android:padding="15dp"
        android:textColorHint="@android:color/white"
        android:background="@drawable/login_edittext"
        android:layout_centerHorizontal="true"
        android:hint="Пароль"
        android:layout_below="@id/login"
        android:id="@+id/password"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />

    <Button
        android:elevation="5dp"
        android:background="@drawable/login_buttons"
        android:textColor="@android:color/white"
        android:id="@+id/loginButton"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/password"
        android:text="Войти"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />

    <Button
        android:elevation="5dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/login_buttons"
        android:textColor="@android:color/white"
        android:id="@+id/forgotPasswordButton"
        android:layout_below="@id/loginButton"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:text="Забыл пароль"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

</RelativeLayout>